  <div class="col-md-3">
    <div class="thumbnail">
      <%= link_to book_path(book) do %>
      <%= image_tag book.image.url{:original}, class: "image-responsive"  %>
      <% end %>
      <div class="caption">
        <h5><strong><%= link_to book.name, book_path(book) %></strong></h5>
        <p>$<%= book.price.to_f / 100 %></p>
      </div>
    </div>
  </div>